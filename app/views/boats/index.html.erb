<div class="boats"><p id="notice"><%= notice %></p>

<h1>Boats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Container amount</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= link_to boat.name, boat %></td>
        <td><%= boat.container_amount %></td>
        <td><%= boat.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>