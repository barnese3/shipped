<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Email</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.email %></td>
        <td><%= company.firstname %></td>
        <td><%= company.lastname %></td>
      </tr>
    <% end %>
  </tbody>
</table>