<div class="jobs"><p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Cost</th>
      <th>Containers</th>
      <th>Delete Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.name, job %></td>
        <td><%= job.description %></td>
        <td><<%= Job::Places.get_location(job.origin) %></td>
        <td><%= Job::Places.get_location(job.destination) %></td>
        <td><%= job.cost %></td>
        <td><%= job.containers %></td>
        <td>
          <% if company_signed_in? %>
          <% if current_company.id == job.company.id %>
          <%= link_to 'Delete', job, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
<!--           the above link will will delete a job using rails UJS -->
  <% end %>
<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>