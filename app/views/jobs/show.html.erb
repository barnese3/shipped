<div class="job"><p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @job.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @job.description %>
</p>

<p>
  <strong>Origin:</strong>
  <%= Job::Places.get_location(@job.origin) %>
</p>

<p>
  <strong>Destination:</strong>
  <%= Job::Places.get_location(@job.destination) %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @job.cost %>
</p>

<p>
  <strong>Containers:</strong>
  <%= @job.containers %>
</p>

<%= link_to 'Edit Job', edit_job_path(@job) %> |
<%= link_to 'Delete Job', @job, method: :delete, data: { confirm: 'Are you sure?' } %>

</div>